<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapterListHomeDates_cl_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_grey"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="@dimen/layout_border_margin_16dp">

    <TextView
        android:id="@+id/adapterListHomeDates_tv_installment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_border_margin_16dp"
        android:layout_marginTop="@dimen/margin_between_text5dp"
        android:text="First Installment Date"
        android:textColor="@color/textGrey"
        android:textSize="@dimen/textMedium14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adapterListHomeDates_tv_installment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_border_margin_16dp"
        android:layout_marginTop="@dimen/margin_between_text5dp"
        android:text="30-06-2020"
        android:textColor="@color/textGrey"
        android:textSize="@dimen/textLarge20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adapterListHomeDates_tv_installment" />


    <TextView
        android:id="@+id/adapterListHomeDates_tv_installment_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_border_margin_16dp"
        android:layout_marginTop="@dimen/margin_between_text5dp"
        android:text="0"
        android:textColor="@color/textGrey"
        android:textSize="@dimen/textMedium14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adapterListHomeDates_tv_installment_date" />

</androidx.constraintlayout.widget.ConstraintLayout>