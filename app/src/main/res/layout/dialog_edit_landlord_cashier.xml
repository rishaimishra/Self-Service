<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/added_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_weight=".4"
                        android:text="Landlord first name"
                        android:textColor="@color/colorBlack" />


                    <EditText
                        android:id="@+id/edt_landlord_first_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_weight=".6"
                        android:background="@drawable/rounded_corner_solid_grey"
                        android:hint="Landlord first name"
                        android:padding="@dimen/dimen16dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/headerTextSize14sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_weight=".4"
                        android:text="Landlord middle name"
                        android:textColor="@color/colorBlack" />


                    <EditText
                        android:id="@+id/edt_landlord_middle_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_weight=".6"
                        android:background="@drawable/rounded_corner_solid_grey"
                        android:hint="Landlord middle name"
                        android:padding="@dimen/dimen16dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/headerTextSize14sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_weight=".4"
                        android:text="Landlord surname"
                        android:textColor="@color/colorBlack" />


                    <EditText
                        android:id="@+id/edt_landlord_surname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_weight=".6"
                        android:background="@drawable/rounded_corner_solid_grey"
                        android:hint="Landlord surname"
                        android:padding="@dimen/dimen16dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/headerTextSize14sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_new_street_number"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_weight=".4"
                        android:text="Property Street Number"
                        android:textColor="@color/colorBlack" />


                    <EditText
                        android:id="@+id/edt_landlord_street_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_weight=".6"
                        android:background="@drawable/rounded_corner_solid_grey"
                        android:hint="Landlord Street Number"
                        android:padding="@dimen/dimen16dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/headerTextSize14sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_weight=".4"
                        android:text="Property Old Street Number"
                        android:textColor="@color/colorBlack" />


                    <EditText
                        android:id="@+id/edt_landlord_old_street_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_weight=".6"
                        android:background="@drawable/rounded_corner_solid_grey"
                        android:hint="Landlord Old Street Number"
                        android:padding="@dimen/dimen16dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/headerTextSize14sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_weight=".4"
                        android:text="Property street name"
                        android:textColor="@color/colorBlack" />


                    <EditText
                        android:id="@+id/edt_landlord_street_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_weight=".6"
                        android:background="@drawable/rounded_corner_solid_grey"
                        android:hint="Landlord street name"
                        android:padding="@dimen/dimen16dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/headerTextSize14sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_weight=".4"
                        android:text="Landlord email"
                        android:textColor="@color/colorBlack" />


                    <EditText
                        android:id="@+id/edt_landlord_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_weight=".6"
                        android:background="@drawable/rounded_corner_solid_grey"
                        android:hint="Landlord email"
                        android:padding="@dimen/dimen16dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/headerTextSize14sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_weight=".4"
                        android:text="Landlord mobile"
                        android:textColor="@color/colorBlack" />


                    <EditText
                        android:id="@+id/edt_landlord_mobile_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_weight=".6"
                        android:background="@drawable/rounded_corner_solid_grey"
                        android:hint="Landlord mobile"
                        android:padding="@dimen/dimen16dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/headerTextSize14sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/lin_id_proof"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/dimen5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_verification_document"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen120dp"
                            android:layout_gravity="center_horizontal"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/placeholder"

                            />
                        <!--    </androidx.cardview.widget.CardView>-->

                        <TextView
                            android:id="@+id/edt_note_id_proof"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dimen5dp"
                            android:gravity="center"
                            android:paddingBottom="@dimen/dimen5dp"
                            android:text="Id proof"
                            android:textColor="@color/colorRed"
                            android:visibility="visible" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dimen5dp"
                            android:gravity="center"
                            android:paddingBottom="@dimen/dimen5dp"
                            android:text="Verification Document"
                            android:visibility="gone" />


                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/lin_address_proof"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/dimen5dp"
                        android:orientation="vertical">




                        <ImageView
                            android:id="@+id/img_address_proof"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen120dp"
                            android:layout_gravity="center_horizontal"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/placeholder"

                            />
                        <TextView
                           android:id="@+id/edt_note_address_proof"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dimen5dp"
                            android:gravity="center"
                            android:paddingBottom="@dimen/dimen5dp"
                            android:text="Address proof"
                            android:textColor="@color/colorRed"
                            android:visibility="visible" />



                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/lin_conveyance_capture"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/dimen5dp"
                        android:orientation="vertical">




                        <ImageView
                            android:id="@+id/img_lin_conveyance_capture"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen120dp"
                            android:layout_gravity="center_horizontal"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/placeholder"

                            />
                        <TextView
                           android:id="@+id/edt_note_lin_conveyance_capture"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dimen5dp"
                            android:gravity="center"
                            android:paddingBottom="@dimen/dimen5dp"
                            android:text="Conveyance Proof"
                            android:textColor="@color/colorRed"
                            android:visibility="visible" />



                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>


            <Button
                android:id="@+id/btn_save_landlord_info"
                style="@style/styleButtonWrapContent"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen16dp"
                android:background="@drawable/rounded_corner_solid_blue"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>