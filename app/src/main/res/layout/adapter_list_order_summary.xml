<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_green"
    android:padding="@dimen/dimen10dp">

    <LinearLayout
        android:id="@+id/adapterOrderSummary_ll_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/activityOrderDetails_tv_quantity"
        app:layout_constraintHorizontal_weight="4.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_green"
            android:padding="@dimen/dimen2dp">

            <ImageView
                android:id="@+id/adapterOrderSummary_iv_image"
                android:layout_width="@dimen/dimen50dp"
                android:layout_height="@dimen/dimen50dp"
                android:src="@drawable/item2" />

        </RelativeLayout>

        <TextView
            android:id="@+id/adapterOrderSummary_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dimen10dp"
            android:gravity="center_horizontal"
            android:text="Apple"
            android:textColor="@color/textLightGrey" />
    </LinearLayout>

    <TextView
        android:id="@+id/activityOrderDetails_tv_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="2"
        android:textColor="@color/textLightGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/activityOrderDetails_tv_price"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/adapterOrderSummary_ll_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activityOrderDetails_tv_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="2.44"
        android:textColor="@color/textLightGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2.4"
        app:layout_constraintStart_toEndOf="@+id/activityOrderDetails_tv_quantity"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>