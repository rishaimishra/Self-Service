<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/layout_border_margin_16dp">

    <TextView
        android:id="@+id/customVedaDialog_tvPassionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_border_margin_16dp"
        android:textAlignment="center"
        android:textColor="@color/colorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customVedaDialog_tvPassionHeader"
        android:layout_marginLeft="@dimen/layout_border_margin_16dp"
        android:layout_marginRight="@dimen/layout_border_margin_16dp"
        android:layout_marginBottom="@dimen/layout_border_margin_16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/customVedaDialog_tvSubmit"
            style="@style/styleButtonWrapContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen10dp"
            android:layout_weight="1"
            android:background="@color/colorRed"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customVedaDialog_tvCancel"
            style="@style/styleButtonWrapContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/lightGreen"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>